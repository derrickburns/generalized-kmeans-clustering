  "divergences": {
    "squaredEuclidean": {
      "formula": "D(x, y) = 0.5 * sum((x_i - y_i)^2)",
      "domain": "any real",
      "symmetric": true,
      "description": "Standard Euclidean distance squared"
    },
    "kl": {
      "formula": "D(x, y) = sum(x_i * log(x_i / y_i) - x_i + y_i)",
      "domain": "strictly positive",
      "symmetric": false,
      "description": "Kullback-Leibler divergence"
    },
    "itakuraSaito": {
      "formula": "D(x, y) = sum(x_i / y_i - log(x_i / y_i) - 1)",
      "domain": "strictly positive",
      "symmetric": false,
      "description": "Itakura-Saito divergence (scale-invariant)"
    },
    "l1": {
      "formula": "D(x, y) = sum(|x_i - y_i|)",
      "domain": "any real",
      "symmetric": true,
      "description": "Manhattan/L1 distance (not a Bregman divergence)"
    },
    "generalizedI": {
      "formula": "D(x, y) = sum(x_i * log(x_i / y_i) - x_i + y_i)",
      "domain": "non-negative",
      "symmetric": false,
      "description": "Generalized I-divergence for unnormalized data"
    },
    "logistic": {
      "formula": "D(x, y) = sum(x_i * log(x_i / y_i) + (1 - x_i) * log((1 - x_i) / (1 - y_i)))",
      "domain": "(0, 1)",
      "symmetric": false,
      "description": "Logistic loss for binary probabilities"
    },
    "spherical": {
      "formula": "D(x, y) = 1 - (x . y) / (||x|| * ||y||)",
      "domain": "non-zero vectors",
      "symmetric": true,
      "description": "Spherical/cosine distance"
    },
    "cosine": {
      "formula": "D(x, y) = 1 - (x . y) / (||x|| * ||y||)",
      "domain": "non-zero vectors",
      "symmetric": true,
      "description": "Cosine distance (alias for spherical)"
    }
  }
